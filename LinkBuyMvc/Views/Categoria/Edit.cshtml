@model LinkBuyLibrary.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card  o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-5">
                <h3 class="text-center" style="margin-bottom:25px; color:#6a0dac">Editar Categoria</h3>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form asp-action="Edit" class="user">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group text-center">
                                <input asp-for="Descricao" class="form-control form-control-user" placeholder="Descrição" />
                                <span asp-validation-for="Descricao" class="text-danger d-block"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Editar categoria" class="btn btn-user btn-block" style="background-color:#6a0dac !important; color:white;" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="user">
    <a class="btn btn-user" style="background-color:#6a0dac !important; color:white;" asp-action="Index"> <span><i class="fas fa-arrow-left"></i></span>  Lista de categorias</a>
</div>


