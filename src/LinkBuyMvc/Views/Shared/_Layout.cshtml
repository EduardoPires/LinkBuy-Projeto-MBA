<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkBuyMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/LinkBuyMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="color: #5B4ABC;">
            <div class="container-fluid">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Produto" asp-action="Index">
                            <i class="fa fa-shopping-bag" aria-hidden="true" style="color: #6A0DAD;"></i>
                            <span style="color: #6A0DAD;">LinkBuy</span>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-shopping-bag" aria-hidden="true" style="color: #6A0DAD;"></i>
                            <span style="color: #6A0DAD;">LinkBuy</span>
                        </a>
                    }
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Index" style="color:#6a0dac !important">Produtos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Categoria" asp-action="Index" style="color:#6a0dac !important">Categorias</a>
                                </li>

                            </ul>

                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout" style="color:#6a0dac !important"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login" style="color:#6a0dac !important">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register" style="color:#6a0dac !important">Cadastrar-se</a>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </nav>
    </header>

    <div class="d-flex flex-column min-vh-100" style="margin-bottom:60px;">
        <div class="container">
            <main role="main" class="flex-fill pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            <span style="color: #6A0DAD;">&copy; 2025 - </span>
            <i class="fa fa-shopping-bag" aria-hidden="true" style="color: #6A0DAD;"></i>
            <span style="color: #6A0DAD;"> LinkBuy</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>