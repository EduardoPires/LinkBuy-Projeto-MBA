@model LinkBuyLibrary.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card  o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-5">
                <h3 class="text-center" style="margin-bottom:25px; color:#6a0dac">Editar Produto</h3>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form asp-action="Edit" enctype="multipart/form-data" class="user">

                            <input type="hidden" asp-for="Id" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">

                                <input asp-for="Descricao" class="form-control form-control-user" placeholder="Descrição" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    <input asp-for="Valor" class="form-control form-control-user" placeholder="Valor" />
                                    <span asp-validation-for="Valor" class="text-danger"></span>
                                </div>

                                <div class="col-sm-6 mb-3">

                                    <input asp-for="Estoque" class="form-control form-control-user" placeholder="Estoque" />
                                    <span asp-validation-for="Estoque" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="form-group">

                                <input asp-for="ImagemUpload" type="file" class="form-control form-control-user-edit" />
                                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                            </div>

                            <div class="form-group">

                                <select asp-for="CategoriaId" class="form-control form-control-user-edit" asp-items="ViewBag.CategoriaId"></select>
                            </div>
                            <input type="hidden" asp-for="VendedorId" />
                            <div class="form-group text-center">
                                <input type="submit" value="Editar Produto" class="btn btn-user btn-block" style="background-color:#6a0dac !important; color:white;" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="user">
    <a class="btn btn-user" style="background-color:#6a0dac !important; color:white;" asp-action="Index"> <span><i class="fas fa-arrow-left"></i></span>  Lista de produtos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
